{
  "name": "purslint",
  "displayName": "Purslint",
  "description": "PureScript linter inspired by hlint",
  "version": "0.1.1",
  "publisher": "RowtypeYoga",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:purescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Purslint",
      "properties": {
        "purslint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable purslint"
        },
        "purslint.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to purslint-lsp executable (uses bundled version if empty)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.10.0",
    "@types/mocha": "^10.0.6",
    "@vscode/test-electron": "^2.3.8",
    "typescript": "^5.3.0",
    "mocha": "^10.2.0",
    "glob": "^10.3.10"
  }
}
